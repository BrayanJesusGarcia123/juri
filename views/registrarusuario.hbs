<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
  <title>Otika - Admin Dashboard Template</title>
  <!-- General CSS Files -->
  <link rel="stylesheet" href="/assets/css/app.min.css">
  <!-- Template CSS -->
  <link rel="stylesheet" href="/assets/css/style.css">
  <link rel="stylesheet" href="/assets/css/components.css">
  <!-- Custom style CSS -->
  <link rel="stylesheet" href="/assets/css/custom.css">
  <link rel='shortcut icon' type='image/x-icon' href='/assets/img/favicon.ico' />
</head>

<body>

     {{>navbar}}
    {{>menuhamburguer}}
    
  <div class="loader"></div>
  <div id="app">
    <div class="main-wrapper main-wrapper-1">
      <div class="navbar-bg"></div>


      <!-- Main Content -->
      <div class="main-content">
        <section class="section">
          <div class="section-body">
            <div class="row">
              <!-- Nombre y Apellido -->
              <div class="col-12">
                <div class="card">
                  <div class="card-header">
                    <h4>Registrar Usuario</h4>
                  </div>
                 <div class="card-body">
    <form action="/registrar" method="POST">
        <!-- Dividir en dos columnas -->
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Nombres</label>
                    <input type="text" name="nombres" class="form-control">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Apellidos</label>
                    <input type="text" name="apellidos" class="form-control">
                </div>
            </div>
        </div>

        <!-- Los demás campos en dos columnas -->
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Tipo De Cargo</label>
                    <select name="tipoCargo" class="form-control form-select">
                        <option>Docente</option>
                        <option>Alumno</option>
                        <option>Administrativo</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Correo</label>
                    <input type="text" name="correo" class="form-control">
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label>Area Del Derecho</label>
                    <select name="areaDerecho" class="form-control form-select">
                        <option>Civil</option>
                        <option>Administrativa</option>
                        <option>Laboral</option>
                        <option>Penal</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Código</label>
                    <input type="number" name="codigo" class="form-control">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Usuario</label>
                    <input type="text" name="usuario" class="form-control">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Contraseña</label>
                    <input type="text" name="contrasena" class="form-control">
                </div>
            </div>
        </div>

        <div class="form-group text-end">
            <button type="submit" name="registrar" class="btn btn-primary">Registrar</button>
        </div>
    </form>
</div>

                </div>
              </div>
            </div>
          </div>
          </form>
        </section>
      </div>


  {{>footer}}
    </div>
  </div>
  <!-- General JS Scripts -->
  <script src="/assets/js/app.min.js"></script>
  <!-- JS Libraies -->
  <!-- Page Specific JS File -->
  <!-- Template JS File -->
  <script src="/assets/js/scripts.js"></script>
  <!-- Custom JS File -->
  <script src="/assets/js/custom.js"></script>
</body>

</html>


